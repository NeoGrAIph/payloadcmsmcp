{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "mediaBlock",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "blockType": { "const": "mediaBlock" },
    "blockName": { "type": "string" },
    "mediaUrl": { "type": "string", "format": "uri" },
    "caption": { "type": "string" },
    "alt": { "type": "string" },
    "alignment": { "type": "string", "enum": ["left", "right", "center"], "default": "center" }
  },
  "required": ["blockType", "mediaUrl"]
}
