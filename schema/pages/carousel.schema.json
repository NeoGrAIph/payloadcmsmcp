{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "carousel",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "blockType": { "const": "carousel" },
    "blockName": { "type": "string" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "imageUrl": { "type": "string", "format": "uri" }
        },
        "required": ["title"]
      }
    }
  },
  "required": ["blockType", "items"]
}
