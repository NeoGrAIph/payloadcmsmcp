{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "callToAction",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "blockType": { "const": "callToAction" },
    "blockName": { "type": "string" },
    "heading": { "type": "string" },
    "description": { "type": "string" },
    "links": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "url": { "type": "string", "format": "uri-reference" },
          "appearance": { "type": "string", "enum": ["default", "outline"] }
        },
        "required": ["label", "url"]
      }
    }
  },
  "required": ["blockType", "heading", "links"]
}
